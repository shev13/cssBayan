* {
  margin: 0;
  padding: 0;
}

body {
  margin: 2vw auto;
  max-width: 580px;
  background-color: #f3f3f3;
}



/* >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> Image */
img {
  margin: 0 auto;
  display: none;
  width: 0;
}

.slider input:checked~label img {
  display: block;
  width: 90%;
  transition: all 0.3s;
}

